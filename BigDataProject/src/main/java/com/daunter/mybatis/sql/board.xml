<mapper namespace="Board" >
	<select id="getBoardList" parameterType="hashmap" resultType="boardVO">
		SELECT 	BOARD_NO, USER_NO, USER_NAME, BOARD_SELECT, BOARD_TITLE, BOARD_DATE, LIKES
		FROM(	SELECT	ROWNUM R, B.*
				FROM	(SELECT * FROM TABLE_BOARD ORDER BY BOARD_NO DESC) B)
		WHERE 	R BETWEEN #{startRow} AND #{endRow}
	</select>
	
	<select id="getBoardCnt" resultType="_int">
		SELECT COUNT(BOARD_NO) FROM TABLE_BOARD
	</select>
	
