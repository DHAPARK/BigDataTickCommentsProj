<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="User">
<!-- 회원가입 -->
	<insert id="join" parameterType="userVO" >
		INSERT INTO TABLE_USER VALUES 
		(SEQ_USER.NEXTVAL,#{user_name},#{user_email},#{user_pw},#{birth_year},0)
	</insert>
<!-- 로그인 -->
	<select id="login" parameterType="userVO">
		SELECT * FROM "user" WHERE user_name IN (#{user_name})
	</select>
<!-- 아이디 중복 확인 -->
	<select id="checkId" parameterType="string" resultType="_int">
		
	</select>
<!-- 아이디 찾기 -->
	<select id="findId" parameterType="string" resultType="string">
		
	</select>
<!-- 비밀번호 찾기 -->
	<select id="findPw" parameterType="string" resultType="string">
		
	</select>
</mapper>
